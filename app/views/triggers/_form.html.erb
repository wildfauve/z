			<%= form.label :potential_voucher_on_threshold, "No Potential Voucher on Threshold" %>			
			<%= radio_button("trigger", "potential_voucher_on_threshold", "false") %>
		</div>
		<div>
			<p>
				<%= form.submit "Create", :class => "form-submit-button" %>
			</p>
		</div>
			
	<%end%>

</div>
