				<%= radio_button("trigger", "potential_voucher_on_threshold", "false") %>
			</div>
		</p>
		<p>
			<div class="field">
				<%= form.label :earn_context %>
				<%= form.text_field :earn_context %>
			</div>		
		</p>
		<div>
			<p>
				<%= form.submit "Submit", :class => "form-submit-button" %>
			</p>
		</div>
			
	<%end%>

</div>
