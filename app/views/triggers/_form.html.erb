			<%= radio_button("trigger", "earn_on_free", "false") %>			
		</div>
		<div class="field">
			<%= form.label :threshold %>
			<%= form.text_field :threshold %>
		</div>
		<div class="field">
			<%= form.label :auto_burn, "Auto Burn" %>
			<%= radio_button("trigger", "auto_burn", "true") %>
			<%= form.label :auto_burn, "No Auto Burn" %>			
			<%= radio_button("trigger", "auto_burn", "false") %>
		</div>
		<div class="field">
			<%= form.label :auto_voucher, "Auto Voucher" %>
			<%= radio_button("trigger", "auto_voucher", "true") %>
			<%= form.label :auto_voucher, "No Auto Voucher" %>			
			<%= radio_button("trigger", "auto_voucher", "false") %>
		</div>
		<div class="field">
			<%= form.label :adjustment %>
			<%= form.text_field :adjustment %>
		</div>
		<div class="field">
			<%= form.label :potential_voucher_on_threshold, "Potential Voucher on Threshold" %>
