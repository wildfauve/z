<div class="border-form">
	<%= form_for @trigger do |form| %>
		<% if @trigger.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@trigger.errors.count, "error") %> prohibited the type from being saved:</h2>

				<ul>
					<% @trigger.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<div class="field">
			<%= form.label :currency_name %>
			<%= form.text_field :currency_name %>
		</div>
		<p>
			<div class="field">
				<%= form.label :earn_on_free, "Yes Earn on Free" %>			
				<%= radio_button("trigger", "earn_on_free", "true") %>
				<%= form.label :earn_on_free, "Don't Earn on Free" %>						
				<%= radio_button("trigger", "earn_on_free", "false") %>			
			</div>
		</p>
		<p>		
			<div class="field">
				<%= form.label :threshold %>
				<%= form.text_field :threshold %>
			</div>
		</p>
		<p>
			<div class="field">
				<%= form.label :voucher_value %>
				<%= form.text_field :voucher_value %>
			</div>
		</p>
		<p>
			<div class="field">
				<%= form.label :number_of_vouchers %>
				<%= form.text_field :number_of_vouchers %>
			</div>
		</p>
		<p>
			<div class="field">
				<%= form.label :auto_burn, "Yes Auto Burn" %>
				<%= radio_button("trigger", "auto_burn", "true") %>
